
@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Роли приложения";
}

<h1>Добавить роль</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Создать роль</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Название</th>
            <th></th>
        </tr>            
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr> 
                <td>@Html.DisplayFor(model => item.Name)</td>
            </tr>
        }
    </tbody>
</table>