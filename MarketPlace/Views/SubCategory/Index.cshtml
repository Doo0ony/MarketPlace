@model IEnumerable<MarketPlace.Models.SubCategory>

@{
    ViewData["Title"] = "Настройки подкатегорий";
}

<h1>Настройки подкатегорий</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Создать новую подкатегорию</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                Название
            </th>
            <th scope="col">
                Картинка
            </th>
            <th scope="col">
                Категория
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.SubCategoryThumbnail)" style="height:5em"/>              
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" style="width:100%" asp-action="Edit" asp-route-id="@item.SubCategoryId">Изменить</a>
                <a class="btn btn-info btn-sm text-white" style="margin:4px 0px; width:100%" asp-action="Details" asp-route-id="@item.SubCategoryId">Подробнее</a>
                <a class="btn btn-danger btn-sm" style="width:100%" asp-action="Delete" asp-route-id="@item.SubCategoryId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
